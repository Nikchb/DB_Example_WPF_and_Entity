<Window x:Class="DB_Example_WPF_and_Entity.LogInWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DB_Example_WPF_and_Entity"
        mc:Ignorable="d"
        Title="LogInWindow" 
        Height="300" Width="300"  
        MinHeight="300" MinWidth="300" 
        MaxHeight="300" MaxWidth="300" 
        FontSize="14">
    <StackPanel >
        <TextBlock Text="Логин" Margin="20 25 20 0" />
        <TextBox x:Name="UserName" Margin="20 5 20 10" />
        <TextBlock Text="Пароль" Margin="20 15 20 0" />
        <PasswordBox x:Name="Password" Margin="20 5 20 10" PasswordChar="*" />
        <Button Margin="20 15 20 10" Click="Button_Click">Войти</Button>
        <TextBlock x:Name="ErrorMessage" Foreground="Red" Text="" Margin="20 15 20 0" />
    </StackPanel>
</Window>
