<Window x:Class="DB_Example_WPF_and_Entity.Windows.DeviceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DB_Example_WPF_and_Entity.Windows"
        mc:Ignorable="d"
        Title="DeviceWindow"   
        Height="350" Width="300" 
        MinHeight="350" MinWidth="300" 
        MaxHeight="350" MaxWidth="300" 
        FontSize="14">
    <StackPanel >
        <TextBlock Text="Название" Margin="20 25 20 0" />
        <TextBox x:Name="Name" MaxLength="50" Margin="20 5 20 10" />
        <TextBlock Text="Стоимость" Margin="20 15 20 0" />
        <TextBox x:Name="Price" MaxLength="50" Margin="20 5 20 10" />
        <TextBlock Text="Компания" Margin="20 15 20 0" />
        <ComboBox x:Name="Company" Margin="20 5 20 10" >          
        </ComboBox>
        <Button Margin="20 15 20 10" Click="Button_Click">Сохранить</Button>
        <TextBlock x:Name="ErrorMessage" Foreground="Red" Text="" Margin="20 15 20 0" />
    </StackPanel>
</Window>
